.ue-button-body
    div(data-ng-if="!vm.template" ng-class="{'button-loading': vm.options.isLoading, 'button-loading-preloader': vm.isLoader}")
        .processing-status-wrapper
                .processing-status {{'PERFORMS_ACTIONS' | translate}}
        button.btn.btn-md(data-ng-if="vm.setting.buttonClass == 'header' || vm.setting.buttonClass == 'footer' || vm.setting.buttonClass == 'default'", ng-class = "['btn-' + vm.setting.buttonClass,{'btn-success': vm.setting.component.settings.action == 'save', 'btn-delete': vm.setting.component.settings.action == 'delete'}]", ng-disabled="vm.disabled || vm.readonly", ng-click="vm.click()")
            span.glyphicon.glyphicon-remove(ng-if="vm.setting.component.settings.action == 'delete'")
            | {{::vm.label}}
        button.editor-action-button(data-ng-if="vm.setting.buttonClass == 'context'", ng-click="vm.click()") {{::vm.label}}        
    .ue-button-template(on-render-template="")